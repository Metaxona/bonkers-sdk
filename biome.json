{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100,
        "attributePosition": "auto",
        "ignore": [
            "dist/**/**",
            "pnpm-lock.yaml",
            "package-lock.json",
            "yarn.lock",
            "node_modules",
            ".gitignore",
            "tsconfig.tsup.json",
            "tsconfig.json",
            "vitest.config.ts",
            "typedoc.json",
            "tsup.config.ts",
            "docs/**",
            "test/contracts/**",
            "test/reports/**"
        ],
        "include": ["src/**/**", "test/**/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useTemplate": "off"
            },
            "suspicious": {
                "noConfusingLabels": "off",
                "noExplicitAny": "off"
            },
            "complexity": {
                "useArrowFunction": "off",
                "noUselessCatch": "off"
            }
        },
        "ignore": [
            "dist/**/**",
            "pnpm-lock.yaml",
            "package-lock.json",
            "yarn.lock",
            "node_modules",
            ".gitignore",
            "tsconfig.tsup.json",
            "tsconfig.json",
            "vitest.config.ts",
            "typedoc.json",
            "tsup.config.ts",
            "docs/**",
            "test/contracts/**",
            "test/reports/**",
            "test/**/**"
        ],
        "include": ["src/**/**"]
    },
    "javascript": {
        "formatter": {
            "jsxQuoteStyle": "double",
            "indentStyle": "space",
            "indentWidth": 4,
            "quoteProperties": "asNeeded",
            "trailingCommas": "none",
            "semicolons": "asNeeded",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "quoteStyle": "single",
            "attributePosition": "auto"
        }
    }
}
